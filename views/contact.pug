extends base.pug

block scripts 
    script(src="../dance.js")

block style 
    style 
        include ../static/dance.css
        include ../static/contact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myform") 
            input(type="text", class="myinput", name="name", placeholder="Enter your name", required)
            input(type="tel", class="myinput", name="phone", placeholder="Enter your phone", required, pattern="[0-9]{10}")
            input(type="email", class="myinput", name="mail", placeholder="Enter your email", autocomplete="off", required)
            input(type="message", class="myinput", name="desc", placeholder="Enter your query")
            button(class="btn")
                |Submit